<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:label="Welcome to Story Teller!"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/Start_button"
        android:text="@string/start_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:textColor="#ff000000" />
    
    <Button
        android:id="@+id/Login"
        android:text="@string/Login"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ff0c90cf"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/Signup"
        android:text="@string/Signup"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="#ff0c90cf"
        android:layout_below="@+id/Start_button"
        android:layout_alignLeft="@+id/Start_button"
        android:layout_alignStart="@+id/Start_button"
        android:layout_marginTop="15dp" />

    <!-- Logotypen -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/Start_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/storyteller_logo_alpha"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/picturM"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story Showcase"
        android:id="@+id/storyShowcaseButton"
        android:layout_below="@+id/Signup"
        android:layout_alignLeft="@+id/Signup"
        android:layout_alignStart="@+id/Signup"
        android:background="#ff1495d0"
        android:layout_alignRight="@+id/Signup"
        android:layout_alignEnd="@+id/Signup"
        android:layout_marginTop="15dp" />

</RelativeLayout>